
@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<AuthorizeView>
    <Authorized>
        You are already logged in.
        <br/>
        <br/>
        <b>PreferredUsername:</b> @User?.Profile?.PreferredUsername<br/>
        <b>Name:</b> @User?.Profile?.Name<br/>
        <b>Email:</b> @User?.Profile?.Email<br/>
        @if(User?.Roles is not null)
        {
            <b>Roles:</b>
            foreach (var role in User.Roles)
            {
               @role<br/>
            }
        }
        <br/>

        
        <button @onclick="OnLogoutButtonClickAsync">Logout</button>

        @if (SignoutTimeSpan is not null)
        {
            <div class="alert alert-danger mt-4" role="alert">
                The user will be automatically signed out in @SignoutTimeSpan
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <button @onclick="OnLoginButtonClickAsync">Login</button>
    </NotAuthorized>
</AuthorizeView>
