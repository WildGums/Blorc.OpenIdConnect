
@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<AuthorizeView>
    <Authorized>
        You are already logged in.
        <b>PreferredUsername:</b> @User?.Profile?.PreferredUsername<br/>
        <b>Name:</b> @User?.Profile?.Name<br/>
        <b>Email:</b> @User?.Profile?.Email<br/>
        @if(User?.Profile?.Roles is not null)
        {
            <b>Roles:</b>
            foreach (var role in User.Profile.Roles)
            {
               @role<br/>
            }
        }
        <button @onclick="OnLogoutButtonClickAsync">Logout</button>
    </Authorized>
    <NotAuthorized>
        <button @onclick="OnLoginButtonClickAsync">Login</button>
    </NotAuthorized>
</AuthorizeView>

